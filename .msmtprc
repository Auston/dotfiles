defaults
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile ~/.mail/sent/sent.log

account gmail
protocol smtp
host smtp.gmail.com
port 587
auth on
tls_starttls on

account one : gmail
from one@gmail.com
user one@gmail.com
password pswone

account two : gmail
from two@gmail.com
user two@gmail.com
password pswtwo

account default : one
